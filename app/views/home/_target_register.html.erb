<%= form_with model: @user, url: user_update_path(@user, top_page: ""), local: true, class: "mt-2" do |f| %>
  <% for pointer, nav_name in @navbars do %>
    <div class="pos-f-t">
      <nav class="navbar navbar-white bg-white">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar<%= pointer %>" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span><i class="fas fa-bars mr-2"></i><%= nav_name %></span>
        </button>
      </nav>
      <div class="collapse" id="navbar<%= pointer %>">
        <div class="bg-white mx-2 py-1 px-4">
          <% Target.where(target_category_id: pointer).each do |target| %>
            <div class="form-check">
              <%= f.radio_button :target, :"#{target.content}", class: "form-check-input" %>
              <%= f.label :target, "#{target.content}", class: "form-check-label" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div id="userTargetSaveBtnWrapper" class="mt-4 text-center"></div>
<% end %>

