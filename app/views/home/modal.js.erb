$(function() {
  <% if @selected_book %>  
    $("#micropost_study_unit").prop("value", "<%= @selected_book.study_unit %>")
    
    <% case @selected_book.study_unit %>
      <% when "ページ" %>
        viewStudyAmountTemplate();
        
        var btnElems = $("<input id='totalBtn' name='studyAmount' type='radio' checked='checked'>合計</input><input id='rangeBtn' name='studyAmount' type='radio'>範囲</input>");

        $("#studyAmount>label").after(btnElems);

        $("#rangeBtn").on("change", function() {
          $("<%= escape_javascript(render 'microposts/study_amount_range_input') %>").replaceAll("#micropost_study_amount");
          $("#studyUnit").html("");
        });

          $('#totalBtn').on("change", function() {
            $("<%= escape_javascript(number_field :micropost, :study_amount, min: 1, max: 9999) %>").replaceAll("#studyAmountRangeInput");
            $("#studyUnit").html("<%= @selected_book.study_unit %>");
          });

      <% when "問", "単語" %>
        viewStudyAmountTemplate();

      <% when "時間", "" %>
        $("#studyAmount").html("");
        
    <% end %>
    
  <% else %>
    $("#studyAmount").html("");

  <% end %>
})


<% if @selected_book %>
  function viewStudyAmountTemplate() {
    $("#studyAmount").html("<%= escape_javascript(label :micropost, :study_amount, "学習量") %><%= escape_javascript(number_field :micropost, :study_amount, min: 1, max: 9999) %><span></span>");
    $("#studyAmount span").prop("id", "studyUnit");
    $("#studyAmount span").html("<%= @selected_book.study_unit %>");
  }

<% end %>
