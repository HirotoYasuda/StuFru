$(function() {
  $('#newMicropostModal').modal('show');

  $("#micropostModal").on("change", "#micropost_book_id",function() {
    book_id = $(this).val();

    var params = { micropost: { book_id: book_id } };

    $.ajax({
          url: "<%= root_path() %>",
          type: "GET", 
          data: params,
          dataType: "script"
    });

  });
})