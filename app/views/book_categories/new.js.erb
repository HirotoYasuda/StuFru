$(function() {
  $("#newBookModal").modal('hide');
  $("#bookStatusEditModal").modal('hide');
  $("#bookRegisterModal").modal('hide');

  $("#book_category_modal").html("<%= escape_javascript(render 'books/book_category_modal') %>");
  $("#bookCategoryModal").modal('show');

  $('#bookCategoryModal').on('hidden.bs.modal', function () {
    <% case @modal %>
      <% when "new" %>
        $("#newBookModal").modal('show');
      <% when "edit" %>
        $("#bookStatusEditModal").modal('show');
      <% when "register" %>
        $("#bookRegisterModal").modal('show');
    <% end %>
    
  });
});