$(function() {
  <% if @book_category.errors.any? %>
    <% @book_category.errors.full_messages.each do |msg| %>
      alert("<%= msg %>");

    <% end %>

  <% else %>
    $("#bookCategoryModal").modal('hide');
    $("[name='status_with_book[book_category_id]']").html("<%= escape_javascript(collection_select(:@status_with_book, :book_category_id, @book_categories, :id, :name)) %>");

    <% case @modal %>
      <% when "new" %>
        $("#newBookModal").modal('show');

      <% when "edit" %>
        $("#bookStatusEditModal").modal('show');

      <% when "register" %>
        $("#bookRegisterModal").modal('show');

    <% end %>
    
  <% end %>

})