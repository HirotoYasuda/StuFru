<% if current_user.like?(micropost) %>
  <%= form_with model: @like = current_user.likes.find_by(micropost_id: micropost), url: micropost_like_path(micropost, @like), method: :delete do |like| %>
    <%= like.submit "いいね！（#{micropost.likes.count}）", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= form_with model: micropost.likes.build(), url: micropost_likes_path(micropost) do |like| %>
    <%= like.submit "いいね！（#{micropost.likes.count}）", class: "btn btn-primary" %>
  <% end %>
<% end %>