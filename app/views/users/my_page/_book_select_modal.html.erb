<%= form_with model: @week_target, url: new_user_week_target_path(@user), method: :get do |f| %>
  <div class="modal fade" id="bookSelectModal" tabindex="-1" role="dialog" aria-labelledby="bookSelectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">教材選択</h5>
        </div>
        <div class="modal-body">
          <% if @user.books.all.empty? %>
            勉強中の教材がありません。
          <% else %>
            <% @book_categories.each do |category| %>
              <% tmp_status_with_books = @status_with_books.where(book_category_id: category.id).where(status: "in_progress") %>
              <% unless tmp_status_with_books.empty? %>
                <div class="py-2">
                  <i class="fas fa-bookmark"></i>
                  <%= category.name %>
                </div>
              <% end %>
              <div class="row">
                <% tmp_status_with_books.each do |status_with_book| %>
                  <label class="col-4 d-flex align-items-center">
                    <%= f.radio_button :book_id, "#{status_with_book.book.id}", class: "mr-2" %>
                    <div class="border rounded" style="width: 7rem; height: 10rem; overflow: auto;">
                      <div class="position-relative" style="height: 7rem;">
                        <%= image_tag url_for(status_with_book.book.icon.variant(resize: "80x100>")), class: "rounded position-absolute", style: "top: 50%; left: 50%; transform: translate(-50%, -50%);" %>
                      </div>
                      <div class="border-top">
                        <%= status_with_book.book.name %>
                      </div>
                    </div>
                  </label>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "選択", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>