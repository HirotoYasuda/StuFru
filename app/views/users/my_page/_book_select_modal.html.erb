<%= form_with model: @week_target, url: new_user_week_target_path(@user), method: :get do |f| %>
  <div class="modal fade" id="bookSelectModal" tabindex="-1" role="dialog" aria-labelledby="bookSelectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">教材選択</h5>
        </div>
        <div class="modal-body">
          <% books_in_progress = @books.where(status: "勉強中") %>
          <% if @week_targets.where(book_id: books_in_progress.pluck(:id)).count == books_in_progress.count %>
            目標を設定できる教材がありません。
          <% else %>
            <% @book_categories.each do |category| %>
              <% tmp_books = books_in_progress.where(book_category_id: category.id) %>
              <p><%= category.name if !tmp_books.empty? && !(@week_targets.where(book_id: tmp_books.pluck(:id)).count == tmp_books.count) %></p>
              <% tmp_books.each do |book| %>
                <% unless @week_targets.find_by(book_id: book.id) %>
                  <label>
                    <%= f.radio_button :book_id, "#{book.id}" %>
                    <%= image_tag url_for(book.icon.variant(resize: "75x75>")) %>
                    <%= book.name %>  
                  </label>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "選択", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>