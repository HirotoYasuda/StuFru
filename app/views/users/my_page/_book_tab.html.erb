                        <%= image_tag url_for(status_with_book.book.icon.variant(resize_and_pad: [90, 90, background: :transparent])), class: "border rounded" %>
                      </div>
                      <div class="mt-1 mx-auto border rounded" style="width: 92px; white-space: nowrap; overflow: auto;">
                        <small><%= status_with_book.book.name %></small>
                      </div>
                    <% end %>
                  </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-finished" role="tabpanel" aria-labelledby="pills-finished-tab">
      <% status = "finished" %>
