<div id="weekTargetCard<%= week_target.id %>">
  <% current_study_amount = @microposts.this_week_study_amount(week_target.book.id) %>

  <div><%= week_target.book.name %></div>

  <div></div>

  <% if week_target.book.study_unit == "時間" %>
    <span id="weekTarget<%= week_target.id %>">目標: <%= sprintf("%02d", week_target.content / 60) %> 時間 <%= sprintf("%02d", week_target.content % 60) %> 分</span>
    <%= link_to "編集", edit_user_week_target_path(@user, week_target), remote: true %>
    <div>現在: <%= sprintf("%02d", current_study_amount / 60) %> 時間 <%= sprintf("%02d", current_study_amount % 60) %> 分</div>
  <% else %>
    <span id="weekTarget<%= week_target.id %>">目標: <%= sprintf("%04d", week_target.content) %> <%= week_target.book.study_unit %></span>
    <%= link_to "編集", edit_user_week_target_path(@user, week_target), remote: true %>
    <div>現在: <%= sprintf("%04d", current_study_amount) %> <%= week_target.book.study_unit %></div>
  <% end %>
</div>