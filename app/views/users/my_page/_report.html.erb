<p>
  <div><strong>総勉強時間</strong></div>
  <%= @total_study_time[0] %>時間<%= @total_study_time[1] %>分
</p>

<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active" id="list-daily-list" data-toggle="list" href="#list-daily" role="tab" aria-controls="daily">日</a>
      <a class="list-group-item list-group-item-action" id="list-weekly-list" data-toggle="list" href="#list-weekly" role="tab" aria-controls="weekly">週</a>
      <a class="list-group-item list-group-item-action" id="list-monthly-list" data-toggle="list" href="#list-monthly" role="tab" aria-controls="monthly">月</a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane  show active" id="list-daily" role="tabpanel" aria-labelledby="list-daily-list">
        <p>
          <div><strong>今日の勉強時間</strong></div>
          <%= @today_study_time[0] %>時間<%= @today_study_time[1] %>分
          <div><%= day_before_ratio_in_study_time %></div>
        </p>
        <strong id="aggregation_period_daily">
          <%= render 'users/graph/aggregation_period_daily' %>
        </strong>
        <div id="daily_graph">
          <%= render 'users/graph/daily_graph' %>
        </div>
      </div>
      <div class="tab-pane " id="list-weekly" role="tabpanel" aria-labelledby="list-weekly-list">
        <p>
          <div><strong>今週の勉強時間</strong></div>
          <%= @this_week_study_time[0] %>時間<%= @this_week_study_time[1] %>分
          <div><%= week_before_ratio_in_study_time %></div>
        </p>
        <strong id="aggregation_period_weekly">
          <%= render 'users/graph/aggregation_period_weekly' %>
        </strong>
        <div id="weekly_graph">
          <%= render 'users/graph/weekly_graph' %>
        </div>
      </div>
      <div class="tab-pane " id="list-monthly" role="tabpanel" aria-labelledby="list-monthly-list">
        <p>
          <div><strong>今月の勉強時間</strong></div>
          <%= @this_month_study_time[0] %>時間<%= @this_month_study_time[1] %>分
          <div><%= month_before_ratio_in_study_time %></div>
        </p>
        <strong id="aggregation_period_monthly">
          <%= render 'users/graph/aggregation_period_monthly' %>
        </strong>
        <div id="monthly_graph">
          <%= render 'users/graph/monthly_graph' %>
        </div>
      </div>
    </div>
  </div>
</div>

<span><strong>今週の目標</strong></span>
<button id="weekTargetNewBtn" class="btn btn-primary">作成</button>

<div id="selectBook"></div>
<%= render 'users/my_page/book_select_modal' %>

<div id="weekTargetForm"></div>


<%= javascript_pack_tag 'users/my_page' %>