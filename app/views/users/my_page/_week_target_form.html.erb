<%= form_with model: @week_target, url: user_week_targets_path(@user) do |f| %>
  <div><a data-toggle='modal' data-target='#bookSelectModal'>教材名:<%= @book.name %></a></div>
  <%= f.hidden_field :book_id %>
  <%= f.label :content %>
  <% case @book.study_unit %>
    <% when "時間" %>
      <%= number_field_tag 'time[hours]', nil, in: 0...168 %>
      <%= label_tag 'time[hours]', "時間" %>
      <%= number_field_tag 'time[minutes]', nil, in: 0...60 %>
      <%= label_tag 'time[minutes]', "分" %>
    <% when "ページ" %>
      <input id="totalBtn" name="studyAmount" type="radio" checked="checked">合計</input>
      <input id="rangeBtn" name="studyAmount" type="radio">範囲</input>
  <% end %>
  <% unless @book.study_unit == "時間" %>
    <%= f.number_field :content, in: 1...9999 %>
    <span>単位：<%= @book.study_unit %></span>
  <% end %>
  <div><%= f.submit "作成", class: "btn btn-primary" %></div>
<% end %>