<p><%= link_to (text_area_tag '', @user.target_comment, readonly: true, placeholder: "具体的な目標を記入しよう！"), 
              user_path(@user, modal_name: "targetCommentEditModal"), remote: true %></p>

<%= form_with model: @user, url: user_update_path(
                                  @user, 
                                  modal_name: "targetCommentEditModal",
                                  area_name: "target_comment_area") do |f| %>
  <div class="modal fade" id="targetCommentEditModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="targetCommentEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">編集</h5>
        </div>
        <div class="modal-body">
          <%= f.label :目標コメント, class: "col-form-label" %>
          <%= f.text_area :target_comment, rows: "3", class: "form-control" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit :保存, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>