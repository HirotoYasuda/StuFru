<% content_for :title, @user.name %>

<div class="m-2">
  <div><strong>プロフィール</strong></div>
  <div class="mx-2">
    <div id="avatar_area" class="mt-3">
      <%= render 'users/show/avatar_area' %>
    </div>
    <div id="target_comment_area" class="mt-3">
      <%= render "users/show/target_comment_area" %>
    </div>
    <div class="d-flex mt-1">
      <%= render 'users/my_page/follow_information' %>
      <%= link_to user_books_path(@user) do %>
        <h5><div class="badge-costom badge badge-pill badge-primary ml-1">本棚（<%= @user.books.count %>）</div></h5>
      <% end %>
    </div>
  </div>
</div>

<hr class="mb-1">

<div id="introduction_area" class="m-2">
  <%= render 'users/show/introduction_area' %>
</div>

<hr class="mb-1">

<div id="target_area" class="m-2">
  <%= render 'users/show/target_area' %>
</div>

<hr class="mb-1">

<div id="basic_information_area" class="m-2 mb-4">
  <%= render 'users/show/basic_information_area' %>
</div>

<%= javascript_pack_tag 'users/show' %>