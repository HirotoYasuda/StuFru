<div id="profile-card-<%= user.id %>" class="col-12 border rounded-lg p-2">
  <%= link_to my_page_path(user), class: "text-reset", style: "text-decoration: none;" do %>
    <div class="row user-card-body ml-2">
      <div class="col-auto pl-0">
        <%= image_tag url_for(user.avatar.variant(gravity: :center, resize:"60x60^", crop:"60x60+0+0")), class: "avatar rounded-circle" %>
      </div>
      <div class="col-9 pl-1">
        <div style="height: 58px">
          <div>
            <%= user.name %>
          </div>
          <div class="text-muted">
            <small>
              <%= user.job %>
              <%= user.live %>
            </small>
          </div>
        </div>
        <div class="overflow-hidden mt-1" style="text-overflow: ellipsis; white-space: nowrap;">
          <%= user.target_comment %>
        </div>
        <div class="text-muted">
          <i class='fab fa-font-awesome-flag text-primary'></i>
          <small>
            <%= user.target %>
            <%= user.my_choice_university %>
          </small>
        </div>
        <div class="text-muted">
          <i class="far fa-clock text-primary"></i>
          <small>
            最近１週間
            <%= user.a_week_study_time %>
          </small>
        </div>
      </div>
    </div>
  <% end %>
  <div id="followBtnWrapper<%= user.id %>" class="offset-2 col-10 mt-2 text-right">
    <%= render 'relationships/follow_btn', user: user %>
  </div>
</div>