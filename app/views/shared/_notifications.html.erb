<% flash.each do |key, value| %>
  <% if value %>
    <% case key %>
      <% when "alert" %>
        <%= content_tag :div, value, class: "alert alert-danger p-0 mb-0" %>
      <% when "notice" %>
        <%= content_tag :div, value, class: "alert alert-success p-0 mb-0" %>
    <% end %>
  <% end %>
<% end %>