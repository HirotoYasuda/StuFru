<% content_for :title, "ログイン" %>

<div class="row justify-content-center pt-3 my-4 my-xl-5">
  <div class="mx-3">
    <h5 class="text-nowrap text-center font-weight-bold">
      <p class="mb-2">繋がった仲間に勉強の成果を</p>
      <p class="mb-2">発信できる勉強系SNSサービス</p>
    </h5>
    <div class="col-auto pt-xl-0">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.hidden_field :email, value: "trial@mail" %>
        <%= f.hidden_field :password, value: "password" %>
        <%= f.submit "お試しログイン", class:"btn btn-dark btn-block mt-4 py-2" %>
      <% end %>
    </div>
  </div>
  
  <div class="col-lg-auto text-center mx-3 mt-2 mt-xl-0">
    <%= image_tag 'logo.png', size: "150x150", class: "mx-auto" %>
  </div>
</div>



<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="border-top py-4">
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control w-50 mx-auto" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, type: "password", autocomplete: "current-password", placeholder: "パスワード", class: "form-control w-50 mx-auto" %>
    </div>

    <div class="text-center">
      <div class="form-group form-check">
        <%= f.check_box :remember_me, type: "checkbox", class: "form-check-input" %>
        <%= f.label :remember_me %>
      </div>

      <div>
        <%= f.submit "ログイン", class: "btn btn-secondary w-50" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
