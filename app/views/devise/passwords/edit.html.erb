<% content_for :title, "パスワードの変更" %>

<div class="mt-2 mb-4 mx-3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "新しいパスワード" %><br />
      <% if @minimum_password_length %>
        <em>（英数字  <%= @minimum_password_length %>文字以上）</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control w-75" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "確認用" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-75" %>
    </div>

    <div class="actions">
      <%= f.submit "変更", class: "btn btn-primary w-25" %>
    </div>
  <% end %>
</div>

<div class="mb-4">
  <%= render "devise/shared/links" %>
</div>