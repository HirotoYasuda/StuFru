<%= form_with model: @status_with_book, url: user_status_with_book_path(@user, @status_with_book) do |f| %>
  <div class="modal fade" id="bookStatusEditModal" tabindex="-1" role="dialog" aria-labelledby="bookStatusEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">ステータス編集</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :status, "ステータス" %>
            <%= f.select :status, options_for_select(StatusWithBook.statuses, selected: @status) %>
          </div>
          <div class="form-group">
            <%= f.label :study_unit, "学習単位" %>
            <%= f.select :study_unit, options_for_select(StatusWithBook.study_units, selected: @study_unit) %>
          </div>
          <div class="form-group">
            <%= label_tag "book[book_category_id]" ,"カテゴリー" %>
            <%= link_to "新規作成", new_user_book_category_path(@user, modal: "edit"), remote: true %>
            <%= f.collection_select :book_category_id, @book_categories, :id, :name %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit :保存, class: "btn btn-primary", id: "edit_book_btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
