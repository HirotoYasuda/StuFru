<%= form_with model: @status_with_book, url: user_status_with_book_path(@user, @status_with_book) do |f| %>
  <div class="modal fade" id="bookStatusEditModal" tabindex="-1" role="dialog" aria-labelledby="bookStatusEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">ステータス編集</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <div>
              <%= f.label :status, "ステータス", class: "mb-1" %>
            </div>
            <div>
              <%= f.select :status, ["勉強中", "勉強予定", "勉強済み"] %>
            </div>
          </div>
          <div class="form-group">
            <div>
              <%= f.label :study_unit, "学習単位", class: "mb-1" %>
            </div>
            <div>
              <%= f.select :study_unit, ["時間", "ページ", "単語", "問"]  %>
            </div>
          </div>
          <div class="form-group">
            <div>
              <%= label_tag "book[book_category_id]" ,"カテゴリー", class: "mb-1" %>
              <%= link_to "新規作成", new_user_book_category_path(@user, modal: "edit"), remote: true, class: "text-primary" %>
            </div>
            <div>
              <%= f.collection_select :book_category_id, @book_categories, :id, :name %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit :保存, class: "btn btn-primary", id: "edit_book_btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
