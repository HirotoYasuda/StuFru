<div class="mt-2">
  <% @books.each do |book| %>
    <div class="mt-1">
      <%= link_to book_path(book), class: "text-primary" do %>
        <div class="d-flex mx-3 align-items-center">
          <div>
            <%= image_tag url_for(book.icon.variant(resize_and_pad: [90, 90, background: :transparent])) %>
          </div>
          <div class="ml-2">
            <div>
              <%= book.name %>
            </div>
            <div>
              <i class="fas fa-user"></i>
              <%= book.users.count %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
