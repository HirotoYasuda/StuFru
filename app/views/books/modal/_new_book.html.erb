<%= form_with model: @book = @user.books.build do |book| %>
  <div class="modal fade" id="newBookModal" tabindex="-1" role="dialog" aria-labelledby="newBookModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">教材登録</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= book.label :icon %>
            <%= book.file_field :icon, class: "form-control-file" %>
          </div>
          <div class="form-group">
            <%= book.label :name %>
            <%= book.text_field :name, placeholder: "教材名を入力" %>
          </div>
          <%= fields_for @status_with_book = @user.status_with_books.build() do |status| %>
            <div class="form-group">
              <%= status.label :status, "ステータス" %>
              <%= status.select :status, StatusWithBook.statuses, include_blank: false %>
            </div>
            <div class="form-group">
              <%= status.label :study_unit, "学習単位" %>
              <%= status.select :study_unit, StatusWithBook.study_units, include_blank: false %>
            </div>
            <div class="form-group">
              <%= label_tag "book[book_category_id]" ,"カテゴリー" %>
              <%= link_to "新規作成", new_user_book_category_path(@user), remote: true %>
              <%= status.collection_select :book_category_id, @book_categories, :id, :name, selected: 1 %>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= book.submit :登録, class: "btn btn-primary", id: "book_register_btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
