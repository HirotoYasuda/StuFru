$(function(){
  $("#error_messages").html("<%= escape_javascript(render 'shared/error_messages', object: @book) %>");
  $("#search_word").html("<%= " #{@keyword} で検索" if @keyword %>");

  <% if @keyword %>
    $("#bookField").html("<%= escape_javascript(render 'books/index/search_result_field') %>");
    $("#search").val("");
  <% else %>
    $("#bookField").html("<%= escape_javascript(render 'books/index/book_shelf') %>");
  <% end %>
})
