<% if @user.register?(@book) %>
  <%= form_with url: book_register_path(@book), method: :delete do |f| %>
    <%= f.submit "本棚から削除", class: "col-12 btn btn-primary" %>
  <% end %>
<% else %>
  <%= link_to "本棚に追加", new_book_register_path(), id: "registerBtn", class: "col-12 btn btn-primary" ,remote: true %>
<% end %>