<%= form_with model: @book do |f| %>
  <div class="modal fade" id="bookEditModal" tabindex="-1" role="dialog" aria-labelledby="bookEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">教材編集</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :icon %>
            <%= f.file_field :icon, class: "form-control-file" %>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, placeholder: "教材名を入力" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit :保存, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
