<% if current_user.register?(@book) %>
  <%= form_with url: book_register_path(@book), method: :delete do |f| %>
    <%= f.submit "登録解除", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= form_with model: current_user.study_books.build(book_id: @book.id), url: book_registers_path do |f| %>
    <%= f.hidden_field :book_id %>
    <%= f.submit "登録", class: "btn btn-primary" %>
  <% end %>
<% end %>